# Flask Configuration
SECRET_KEY=a-very-secret-key-for-production-change-me
FLASK_CONFIG=dev # 'dev', 'prod', or 'test'
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000

# For local development, ensure you have a PostgreSQL server running locally.
DATABASE_URL=postgresql://user:password@localhost:5432/ai_genesis_db

# Stripe API Keys
# IMPORTANT: Use your Stripe TEST keys for local development.
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_...

# Email Configuration (Example for Mailgun)
# For local development, use a tool like MailHog (https://github.com/mailhog/MailHog)
MAIL_SERVER=smtp.mailgun.org
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER="Your Name <noreply@yourdomain.com>"

# Celery/Redis Configuration
# For local development, ensure you have a Redis server running locally.
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

GOOGLE_API_KEY=your-google-api-key-here
HF_API_KEY=your-huggingface-api-key-here
OPENAI_API_KEY=sk-...
SERPER_API_KEY=your-serper-api-key-here

# Sentry DSN for error tracking (optional for local dev, required for prod)
SENTRY_DSN=
